{{!
    @template quizaccess_quizproctoring/response_modal
    
    Response Modal template.

    Example context (json):
    {
        "title": "User Images",
        "body": "Lightbox Images with Previous & Next Button"
    }
}}
{{#images.length}}<h6 class="attempt-date">{{#str}} attemptstarted, quizaccess_quizproctoring {{/str}} {{attemptdate}}</h6>{{/images.length}}
<div class="proctoring-images-modal">
    {{#images}}
        <div class="proctoring-image-item {{cssClass}}">
            <a href="{{url}}" data-lightbox="user-images" data-title="{{title}}" class="image-link">
                <img src="{{url}}" alt="{{title}}" class="proctoring-image-thumbnail"/>
            </a>
            <p class="image-time">{{time}}</p>
            <p class="image-title" style="display:none;">{{title}}</p>
        </div>
    {{/images}}
    {{^images}}
        <p>{{#str}} noimageswarning, quizaccess_quizproctoring {{/str}}</p>
    {{/images}}
    {{#images.length}}
    <div class="image-list-container">
    <ul class="imagelist">
        <li class="mainimage"> - Main image</li>
        <li class="warningimage"> - Warning image</li>
        <li class="approveimage"> - Approved image</li>
    </ul>
    </div>
    {{/images.length}}
</div>
