{{!
    @template quizaccess_quizproctoring/response_modal
    
    Response Modal template.

    Example context (json):
    {
        "title": "User Images",
        "body": "Images with Previous & Next Button"
    }
}}
{{< core/modal }}
    {{$title}}{{/title}}
    {{$body}}
        <div class="text-center">
            <div class="imgheading">&nbsp;</div>
            <img class="userimg" src="#" alt="Thumbnail">
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-secondary" data-action="previous" disabled>{{#str}} previous {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="next" >{{#str}} next {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
