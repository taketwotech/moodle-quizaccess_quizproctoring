{{!
    @template quizaccess_quizproctoring/response_audio_modal
    
    Response Audio Modal template.

    Example context (json):
    {
        "title": "Proctoring Audio",
        "body": "Audio files with time stamps"
    }
}}
{{#audios.length}}<h6 class="attempt-date">{{#str}} attemptstarted, quizaccess_quizproctoring {{/str}} {{attemptdate}}</h6>{{/audios.length}}
<div class="audio-list">
    {{#audios.length}}
        {{#audios}}
        <div class="audio-item">
            <div class="audio-inline">
                <div class="audio-time">{{time}}</div>
                <audio controls preload="none">
                    <source src="{{url}}" type="audio/webm">
                    {{#str}} audionotsupported, quizaccess_quizproctoring {{/str}}
                </audio>
            </div>
        </div>
        {{/audios}}
    {{/audios.length}}
    {{^audios.length}}
        <p>{{#str}} noaudio, quizaccess_quizproctoring {{/str}}</p>
    {{/audios.length}}
</div>
